WITH CTE AS (
    SELECT
        COUNT(*) AS row_count,{% for column in columns %}
        {{ column }},{% endfor %}
    FROM `{{ project_id }}.{{ dataset }}.{{ table }}`
    WHERE
        date_partition = DATE('{{ partition }}')
    GROUP BY{% for column in columns %}
        {{ column }}{{ ',' if not loop.last else '' }}{% endfor %}
    HAVING COUNT(*) > 1
)

SELECT
    TO_JSON_STRING(CTE) AS additional_information,
    '{{ project_id }}' AS project_id,
    '{{ dataset }}' AS dataset,
    '{{ table }}' AS table,
    '{{ dq_check }}' AS dq_check,
    '{{ dataset_owner }}' AS dataset_owner,
    '{{ alerts_enabled }}' AS alerts_enabled,
    CURRENT_DATETIME() AS actual_run_date
FROM CTE
WHERE {{ condition }}